<?xml version="1.0"?>
<config>
    <modules>
        <Betaoutexport_Exporter>
            <version>0.1.0</version>
        </Betaoutexport_Exporter>
    </modules>
    <frontend>
        <routers>
            <exporter>
                <use>standard</use>
                <args>
                    <module>Betaoutexport_Exporter</module>
                    <frontName>Betaout exporter</frontName>
                </args>
            </exporter>
        </routers>
        <layout>
            <updates>
                <exporter>
                    <file>betaoutexporter.xml</file>
                </exporter>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<exporter>
				<use>admin</use>
				<args>
					<module>Betaoutexport_Exporter</module>
					<frontName>exporter</frontName>
				</args>
			</exporter>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<exporter module="exporter">
				<title>Betaout Exporter</title>
				<sort_order>71</sort_order>               
				<children>
					<export module="exporter">
						<title>Export Orders</title>
						<sort_order>1</sort_order>
						<action>exporter/adminhtml_exporter</action>
					</export>
				</children>
			</exporter>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<exporter>
							<title>Exporter Module</title>
							<sort_order>10</sort_order>
							<children>
								<export>
									<title>Export Orders</title>
								</export>
							</children>
						</exporter>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<exporter>
					<file>betaoutexporter.xml</file>
				</exporter>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <exporter>
                <class>Betaoutexport_Exporter_Model</class>
                <resourceModel>exporter_mysql4</resourceModel>
            </exporter>
            <exporter_mysql4>
                <class>Betaoutexport_Exporter_Model_Mysql4</class>
                <entities>
                    <exporter>
                        <table>exporter</table>
                    </exporter>
                </entities>
            </exporter_mysql4>
        </models>
        <resources>
            <exporter_setup>
                <setup>
                    <module>Betaoutexport_Exporter</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </exporter_setup>
            <exporter_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </exporter_write>
            <exporter_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </exporter_read>
        </resources>
        <blocks>
            <exporter>
                <class>Betaoutexport_Exporter_Block</class>
            </exporter>
			
			<adminhtml>
                <rewrite>
                    <sales_order_shipment_view_form>Betaoutexport_Exporter_Block_Sales_Order_Form_Form</sales_order_shipment_view_form>
                </rewrite>
            </adminhtml>
			
	    <adminhtml>
                <rewrite>
                    <sales_order_shipment_create_items>Betaoutexport_Exporter_Block_Sales_Order_Items</sales_order_shipment_create_items>
                </rewrite>
            </adminhtml>
			
        </blocks>
        <helpers>
            <exporter>
                <class>Betaoutexport_Exporter_Helper</class>
            </exporter>
        </helpers>
    </global>
</config>